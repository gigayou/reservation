<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.layout.QMUILinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/doctor_lecture_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="14dp"
    android:gravity="start"
    android:orientation="vertical"
    app:qmui_outerNormalColor="?attr/qmui_config_color_background"
    app:qmui_showBorderOnlyBeforeL="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 图片正文 -->
        <FrameLayout
            android:id="@+id/doctor_lecture_framelayout"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@mipmap/bg_video_test">
            <!-- 标题 -->
            <TextView
                android:id="@+id/title_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="8dp"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:text="新闻标题新闻标题新闻标题标题新闻标题新闻标题"
                android:textColor="@color/qmui_config_color_white"
                android:textSize="@dimen/textsize_morelarge" />

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center"
                android:src="@mipmap/ic_video" />

            <TextView
                android:id="@+id/video_time_textview"
                style="@style/QDCommonDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:gravity="start"
                android:text="14:20"
                android:textColor="@color/qmui_config_color_white" />
        </FrameLayout>

        <!-- 发布人 视频内容类型  发布时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/qmui_config_color_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/publish_man_textview"
                style="@style/QDCommonDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginBottom="0dp"
                android:layout_weight="3"
                android:gravity="start"
                android:text="石河子大学医学院"
                android:textColor="?attr/qmui_config_color_gray_1" />

            <TextView
                android:id="@+id/department_textview"
                style="@style/QDCommonDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="脑科"
                android:textColor="?attr/app_primary_color" />

            <TextView
                android:id="@+id/publish_time_textView"
                style="@style/QDCommonDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginBottom="0dp"
                android:layout_weight="3"
                android:gravity="right"
                android:text="2018-12-11 12:00:10"
                android:textColor="?attr/qmui_config_color_gray_1" />


        </LinearLayout>


    </LinearLayout>
</com.qmuiteam.qmui.layout.QMUILinearLayout>